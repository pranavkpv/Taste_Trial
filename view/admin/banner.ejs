<script>
  Swal.fire({
    text: "<%= existmessage %>",
    icon: "info",
    confirmButtonText: "OK"
  }).then(() => {
    const addBannerModal = document.getElementById('addBannerModal');
    if (addBannerModal) {
      const modalInstance = new bootstrap.Modal(addBannerModal);
      modalInstance.show();
    }
  });
</script>
<% } %>

