  Swal.fire({
    text: "<%= existmessage %>",
    icon: "info",
    confirmButtonText: "OK"
  }).then(() => {
    const addCategoryModal = document.getElementById('addCategoryModal');
    if (addCategoryModal) {
      const modalInstance = new bootstrap.Modal(addCategoryModal);
      modalInstance.show();
    }
  });
</script>
<% } %>

