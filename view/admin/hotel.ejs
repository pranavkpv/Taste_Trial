<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bootstrap Sidebar</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/dashboard.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <nav class="sidebar">
    <ul class="nav">
      <li class="nav-item">
        <a class="nav-link " href="/admin/dashboard">
          <i class="fas fa-gauge fs-5 p-2"></i>
          <span class="menu-title fs-4">Dashboard</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/banner">
          <i class="fas fa-gauge fs-5 p-2"></i>
          <span class="menu-title fs-4">Banner Updation</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="/admin/usermanagement">
          <i class="fas fa-user fs-5 p-2"></i>
          <span class="menu-title fs-5">User Management</span>
        </a>
      </li>
      <li class="nav-item ">
        <a class="nav-link " href="/admin/category">
          <i class="fas fa-tag fs-5 p-2 "></i>
          <span class="menu-title fs-5 ">Category Registration</span>
        </a>
      </li>
      <li class="nav-item category">
        <a class="category px-2" href="/admin/hotel">
          <i class="fas fa-building fs-5 p-2"></i>
          <span class="menu-title fs-5">Hotel Registration</span>
        </a>
      </li>
      <li class="nav-item ">
        <a class="nav-link" href="/admin/food">
          <i class="fas fa-drumstick-bite fs-5 p-2"></i>
          <span class="menu-title fs-5">Food Registration</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link  text-danger" href="">
          <i class="fas fa-right-from-bracket fs-5 p-2 text-danger"></i>
          <span class="menu-title fs-5">Logout</span>
        </a>
      </li>
    </ul>
  </nav>
  <div class="d-flex searchkey">
    <input type="text" id="searchCategory" class="form-control w-50" placeholder="Search Hotel" onkeyup="searchCategories()">
  </div>
  <button class="additem" data-bs-toggle="modal" data-bs-target="#addHotel">Add item +</button>
  <table class="atable">
    <thead>
      <tr>
        <th>Sl No</th>
        <th>Hotel Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody id="categoryTableBody">
      <% if (hotels && hotels.length > 0) { %>
        <% hotels.forEach(function(hotel, index) { %>
            <tr>
                <td class="isblockedindex"><%= index + 1 %></td>
                <td class="isblockedhotelname"><%= hotel.hotelname %></td>
                <td class="d-flex gap-5">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#editHotel" onclick="editFun('<%= hotel.hotelname %>','<%= hotel._id %>','<%= hotel.hoteladdress %>','<%= hotel.photo %>','<%= hotel.contact_no %>','<%= hotel.alternative_no %>')">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <a href="#" data-bs-toggle="modal" data-bs-target="#blockHotel" onclick="blockFun('<%= hotel._id %>')">
                      <i class="bi bi-ban"></i>
                    </a>   
                    <a href="#" data-bs-toggle="modal" data-bs-target="#unblockHotel" onclick="unblockFun('<%= hotel._id %>')">
                      <i class="bi bi-unlock"></i>
                    </a>               
                </td>
                <td class="isblockedstatus" style="color:white"><%= hotel.is_blocked %></td>
            </tr>
        <% }) %>
    <% } else { %>
        <tr>
            <td colspan="3">No hotel found.</td>
        </tr>
    <% } %>
    
    
    </tbody>
  </table>

<!-- Add hodel Modal -->
<div class="modal fade" id="addHotel" tabindex="-1" aria-labelledby="addHotelLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body">
        <form action="/admin/addHotel" method="post" enctype="multipart/form-data">
          <h3>Add Hotel</h3>
          <label for="addHotelInput" class="form-label">Hotel Name</label>
          <input class="form-control" type="text" name="hotelname" id="addHotelInput" placeholder="Enter hotel name" required>

          <label for="address" class="form-label">Address</label>
          <input class="form-control" type="text" name="hoteladdress" id="address" placeholder="Enter hotel address" required>
          
          <label for="imageInput" class="form-label">Upload Image</label>
          <input class="form-control" type="file" name="photo" id="imageInput" accept="image/*" required>

          <label for="contactnumber" class="form-label">Contact Number</label>
          <input class="form-control" type="text" name="contact_no" id="contactnumber" placeholder="Enter contact number" required>

          <label for="alternativenumber" class="form-label">Alternative Number</label>
          <input class="form-control" type="text" name="alternative_no" id="alternativenumber" placeholder="Enter alternative number" required>
          
          
          <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="btn btn-primary">Add Hotel</button>
          </div>
        </form>
        
      </div>
    </div>
  </div>
</div>

<!-- Edit Hotel Modal -->
<div class="modal fade" id="editHotel" tabindex="-1" aria-labelledby="editHotelLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body">
        <form action="/admin/editHotel" method="post" enctype="multipart/form-data">
          <h3>Edit Hotel</h3>
          <input type="hidden" id="hoteleditid" name="id">
          <label for="editHotelInput" class="form-label">Hotel Name</label>
          <input class="form-control" type="text" name="hotelname" id="editHotelInput" placeholder="Enter hotel name" required>

          <label for="address" class="form-label">Address</label>
          <input class="form-control" type="text" name="hotelAddress" id="editaddress" placeholder="Enter hotel address" required>
          
          <label for="imageInput" class="form-label">Upload Image</label>
          <img id="editImagePreview" src=""  class="img-thumbnail mb-3" width="150">
          <input class="form-control" type="file" name="photo" id="editimageInput" accept="image/*">
          

          <label for="contactnumber" class="form-label">Contact Number</label>
          <input class="form-control" type="text" name="contact_no" id="editcontactnumber" placeholder="Enter contact number" required>

          <label for="alternativenumber" class="form-label">Alternative Number</label>
          <input class="form-control" type="text" name="alternative_no" id="editalternativenumber" placeholder="Enter alternative number" required>
          
          
          <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="btn btn-primary">Edit Hotel</button>
          </div>
        </form>
        
      </div>
    </div>
  </div>
</div>

<!-- block Hotel modal -->
<div class="modal fade" id="blockHotel" tabindex="-1" aria-labelledby="editCategoryLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body">
           <form action="/admin/blockHotel" method="post">
            <input type="hidden" id="blockid" name="blockid">
            <h2>Are you sure</h2>
           <p>Do you want to block the hotel!</p>
           <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-primary me-2" data-bs-dismiss="modal">Cancel</button>
            <button class="btn btn-danger" type="submit">Block</button>
          </div>
           </form>
      </div>
    </div>
  </div>
</div>

<!-- unblock hotel -->

<div class="modal fade" id="unblockHotel" tabindex="-1" aria-labelledby="editCategoryLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body">
           <form action="/admin/unblockHotel" method="post">
            <input type="hidden" id="unblockid" name="unblockid">
            <h2>Are you sure</h2>
           <p>Do you want to unblock the hotel!</p>
           <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-primary me-2" data-bs-dismiss="modal">Cancel</button>
            <button class="btn btn-danger" type="submit">Unblock</button>
          </div>
           </form>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script>
   function editFun(hotelname, id, hotelAddress, photo, contact_no, alternative_no) {
  document.getElementById("hoteleditid").value = id;
  document.getElementById("editHotelInput").value = hotelname;
  document.getElementById("editaddress").value = hotelAddress;
  document.getElementById("editcontactnumber").value = contact_no;
  document.getElementById("editalternativenumber").value = alternative_no;
  document.getElementById("editImagePreview").src = ``; // Adjust the path as necessary
}
function deleteFun(hotelname){
  document.getElementById("deletehotel").value=hotelname
}
function searchCategories(){
  const input = document.getElementById("searchCategory").value.toLowerCase();
    const rows = document.querySelectorAll("#categoryTableBody tr");
    let serialNumber = 1;

    rows.forEach(row => {
        const category = row.children[1].textContent.toLowerCase(); 
        if (category.includes(input)) {
            row.style.display = ""; 
            row.children[0].textContent = serialNumber++; 
        } else {
            row.style.display = "none";
        }
    });
}
function blockFun(id){
  document.getElementById("blockid").value=id
}
function unblockFun(id){
  document.getElementById("unblockid").value=id
}
document.querySelectorAll(".isblockedstatus").forEach((statusElement, index) => {
    if (statusElement.textContent.trim() === "true") {
        // Apply color to the corresponding category name
        document.querySelectorAll(".isblockedhotelname")[index].style.color = "red";
    }
});
document.querySelectorAll(".isblockedstatus").forEach((statusElement, index) => {
    if (statusElement.textContent.trim() === "true") {
        // Apply color to the corresponding category name
        document.querySelectorAll(".isblockedindex")[index].style.color = "red";
    }
});

  </script>
</body>
</html>
