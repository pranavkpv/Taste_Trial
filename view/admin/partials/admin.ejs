<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Taste Trial-Admin</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <!-- Bootstrap Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css"
    rel="stylesheet" />
  <style>
    .nav-link.active {
      background-color: #1a8e31 !important;
      color: white !important;
    }
  </style>
</head>

<body class="bg-light d-flex flex-column">

  <!-- Fixed Header -->
  <header class="navbar navbar-light bg-white shadow-sm fixed-top px-3" style="height: 70px;">
    <div class="d-flex align-items-center gap-2">
      <!-- Sidebar toggle button for small screens -->
      <button class="btn btn-outline-primary d-lg-none" id="sidebarToggle" aria-label="Toggle sidebar">
        <i class="fas fa-bars"></i>
      </button>
      <!-- Logo -->
      <img src="/uploads/logo.jpeg" alt="Logo" class="rounded" style="height:40px; width:40px; object-fit:cover;">
      <span class="fw-bold fs-4 text-dark">Taste Trial</span>
    </div>
    <!-- Logout Button -->
    <button class="btn btn-danger fw-medium" onclick="logout()">
      <i class="fas fa-sign-out-alt me-2"></i>Logout
    </button>
  </header>

  <!-- Sidebar Navigation -->
  <nav id="sidebar"
    class="bg-white position-fixed top-85 start-0 vh-100 shadow-lg d-none d-lg-flex flex-column p-3 mt-4"
    style="width: 240px;">
    <a href="/admin/dashboard" class="nav-link px-3 mt-5 py-2 rounded text-secondary fw-semibold">
      <i class="fas fa-home me-2"></i>Dashboard
    </a>
    <a href="/admin/usermanagement" class="nav-link px-3 py-2 rounded text-secondary">
      <i class="fas fa-users me-2"></i>User Management
    </a>
    <a href="/admin/banner" class="nav-link px-3 py-2 rounded text-secondary">
      <i class="fas fa-image me-2"></i>Banner Management
    </a>
    <a href="/admin/category" class="nav-link px-3 py-2 rounded text-secondary">
      <i class="fas fa-list me-2"></i>Category Management
    </a>
    <a href="/admin/food" class="nav-link px-3 py-2 rounded text-secondary">
      <i class="fas fa-utensils me-2"></i>Food Management
    </a>
    <a href="/admin/varient" class="nav-link px-3 py-2 rounded text-secondary">
      <i class="fas fa-tags me-2"></i>Variant Management
    </a>
    <a href="/admin/hotel" class="nav-link px-3 py-2 rounded text-secondary">
      <i class="fas fa-hotel me-2"></i>Hotel Management
    </a>
    <a href="/admin/rate" class="nav-link px-3 py-2 rounded text-secondary">
      <i class="fas fa-star me-2"></i>Rate Management
    </a>
    <a href="/admin/order" class="nav-link px-3 py-2 rounded text-secondary">
      <i class="fas fa-shopping-cart me-2"></i>Order Management
    </a>
    <a href="/admin/coupon" class="nav-link px-3 py-2 rounded text-secondary">
      <i class="fas fa-percent me-2"></i>Coupon Management
    </a>
    <a href="/admin/returndata" class="nav-link px-3 py-2 rounded text-secondary">
      <i class="fas fa-undo me-2"></i>Return Order Management
    </a>
    <a href="/admin/delivery" class="nav-link px-3 py-2 rounded text-secondary mt-2">
      <i class="bi bi-truck me-2"></i>Delivery Fee Management
    </a>
  </nav>

  <main class="flex-grow-1 ms-240px pt-70px px-4 mt-5">
    <div class="container-fluid">
      <!-- Your page content here -->
    </div>
  </main>

  <!-- Logout Modal -->
  <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="logoutModalLabel">Are You sure?</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">Do You Want To Logout?</div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
          <button class="btn btn-primary" onclick="logoutfun()">Yes</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    document.getElementById('sidebarToggle').addEventListener('click', () => {
      document.getElementById('sidebar').classList.toggle('d-none');
    });

    document.addEventListener('DOMContentLoaded', () => {
      const currentPath = window.location.pathname;
      document.querySelectorAll('.nav-link').forEach(link => {
        link.classList.remove('active');
        if (currentPath === link.getAttribute('href') || currentPath.startsWith(link.getAttribute('href') + '/')) {
          link.classList.add('active');
        }
      });
    });

    // Logout functions remain same
    function logout() {
      new bootstrap.Modal(document.getElementById('logoutModal')).show();
    }

    function logoutfun() {
      window.location.href = '/admin/login';
    }

  </script>

</body>

</html>