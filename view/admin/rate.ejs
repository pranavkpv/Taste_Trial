<%- include('partials/admin') %>
<link rel="stylesheet" href="/rate.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
<div class="content">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="">Rate Management</h3>
    <button class=" addItem" onclick="addItem()" data-bs-toggle="modal" data-bs-target="#addRateModal"> + Add
      Item</button>
  </div>

  <!-- Search Bar -->
  <div class="row search-bar">
    <div class="col-md-6 ">
      <div class="input-group">
        <span class="input-group-text bg-secondary text-light"><i class="fas fa-search"></i></span>
        <input type="text" id="searchInput" class="form-control" placeholder="Search by Hotel...">
      </div>
    </div>
  </div>

  <!-- Table -->
  <div class="table-responsive custom-table-bg">
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th>Sl No</th>
          <th>Hotelname</th>
          <th>Foodname</th>
          <th>VarientName</th>
          <th>image</th>
          <th>Price</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody class="tableBody">
        <!-- loop of food data -->

        <% ratecollections.forEach((element,index) => { %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= element.hotelDetails[0].hotelname %></td>
          <td><%= element.foodDetails[0].foodname %></td>
          <td><%= element.varientDetails[0].varientname %></td>
          <td><img src="<%= element.images[0] %>" alt="" style="height:50px"></td>
          <td><%= element.rate %></td>
          <td class="action-icons">
            <a class="text-dark" href="" data-bs-toggle="modal" data-bs-target="#editrateModal"
              onclick="editFun('<%= element.hotelDetails[0].hotelname %>','<%= element.foodDetails[0].foodname %>','<%= element.varientDetails[0].varientname %>','<%= element.rate %>','<%= element.gst_per %>','<%= element.delivery_per %>','<%= element.packing_per %>','<%= element.delivery_time %>','<%= element.images[0] %>','<%= element.images[1] %>','<%= element.images[2] %>','<%= element._id %>','<%= element.stock %>','<%= element.files[0] %>','<%= element.files[1] %>','<%= element.files[2] %>')"><i
                class="bi bi-pencil-square"></i></a>
          </td>
          <td class="d-none isblocked" id="isblocked">true</td>
        </tr>

        <% }) %>

        <!-- /close the loop -->
      </tbody>
    </table>
  </div>

</div>

