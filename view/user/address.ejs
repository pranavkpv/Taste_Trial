<style>
  :root {
      --primary-color: #4361ee;
      --secondary-color: #3f37c9;
      --success-color: #4cc9f0;
      --warning-color: #f72585;
      --card-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;
  }

  body {
      background-color: #f8f9fa;
  }

  .content-header {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      color: white;
      padding: 2.5rem 2rem;
      border-radius: 15px;
      margin-bottom: 2rem;
      box-shadow: var(--card-shadow);
  }

  .content-header p {
      color: rgba(255, 255, 255, 0.8);
      margin-bottom: 0;
  }

  .address-list {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
  }

  .address-item {
      background: white;
      border-radius: 15px;
      border: none;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
  }

  .address-item:hover {
      transform: translateY(-5px);
      box-shadow: var(--card-shadow);
  }

  .address-type-badge {
      position: absolute;
      top: 1rem;
      right: 1rem;
      background: var(--success-color);
      color: white;
      padding: 0.3rem 1rem;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 500;
  }

  .address-content {
      padding: 1.5rem;
  }

  .address-details {
      margin: 1rem 0;
      color: #6c757d;
  }

  .contact-info {
      display: flex;
      gap: 1rem;
      margin-bottom: 1rem;
      color: #495057;
  }

  .phone-number {
      display: flex;
      align-items: center;
      gap: 0.5rem;
  }

  .phone-number i {
      color: var(--primary-color);
  }

  .alt-phone {
      color: var(--warning-color);
  }

  .address-actions {
      display: flex;
      gap: 0.5rem;
  }

  .btn-edit,
  .btn-delete {
      flex: 1;
      border-radius: 8px;
      padding: 0.5rem 1rem;
      font-weight: 500;
      transition: all 0.3s ease;
  }

  .btn-edit {
      background-color: #f8f9fa;
      color: var(--primary-color);
      border: 1px solid var(--primary-color);
  }

  .btn-edit:hover {
      background-color: var(--primary-color);
      color: white;
  }

  .btn-delete {
      background-color: #fff5f5;
      color: var(--warning-color);
      border: 1px solid var(--warning-color);
  }

  .btn-delete:hover {
      background-color: var(--warning-color);
      color: white;
  }

  .add-address-btn {
      background: var(--primary-color);
      color: white;
      border-radius: 10px;
      padding: 0.75rem 2rem;
      font-weight: 500;
      border: none;
      transition: all 0.3s ease;
  }

  .add-address-btn:hover {
      background: var(--secondary-color);
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
  }

  .empty-state {
      text-align: center;
      padding: 3rem;
      color: #6c757d;
  }
</style>
<%- include('partials/userheader') %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-2 menu">
      <%- include('partials/profileside') %>
    </div>
    <div class="col-md-10 " style="margin-top: 82px;">
      <div class="content-header">
        <h1 class="fw-bold mb-2">Manage Your Addresses</h1>
        <h1 class="d-none"><%= userid %></h1>
        <p>Add, edit, or delete your saved addresses for faster checkout.</p>
      </div>

      <div class="main-content">
        <div class="address-list">
          <% if (addressess.length === 0) { %>
          <div class="empty-state">
            <i class="fas fa-map-marker-alt fa-3x mb-3"></i>
            <h4>No addresses saved yet</h4>
            <p>Add your first address to get started</p>
          </div>
          <% } %>

          <% addressess.forEach(element => { %>
          <div class="address-item">
            <div class="address-type-badge">
              <%= element.addresstype %>
            </div>
          
            <div class="address-content">
              <div class="address-details">
                <p class="mb-2">
                  <i class="fas fa-map-marker-alt me-2"></i>
                  <%= element.landmark %>, <%= element.city %>
                </p>
                <p class="mb-2">
                  <i class="fas fa-map-marker-alt me-2"></i>
                  <%= element.locationDetails[0].location %>
                </p>
                <p class="mb-2">
                  <i class="fas fa-location-dot me-2"></i>
                  <%= element.state %>, <%= element.pin_code %>
                </p>
              </div>

              <div class="contact-info">
                <div class="phone-number">
                  <i class="fas fa-phone"></i>
                  <%= element.mobile_no %>
                </div>
                <% if (element.alternative_no) { %>
                <div class="phone-number alt-phone">
                  <i class="fas fa-phone"></i>
                  <%= element.alternative_no %>
                </div>
                <% } %>
              </div>

              <div class="address-actions">
                <button class="btn btn-edit" data-bs-toggle="modal" data-bs-target="#editAddressModal"
                  onclick="editFun('<%=element._id %>','<%=element.city %>','<%=element.state %>','<%=element.pin_code %>','<%=element.landmark %>','<%=element.mobile_no %>','<%=element.alternative_no %>','<%=element.addresstype %>','<%= element.locationDetails[0]._id %>')">
                  <i class="fas fa-edit me-2"></i>Edit
                </button>
                <button class="btn btn-delete" data-bs-toggle="modal" data-bs-target="#deleteAddressModal"
                  onclick="deleteFun('<%= element._id %>')">
                  <i class="fas fa-trash-alt me-2"></i>Delete
                </button>
              </div>
            </div>
          </div>
          <% }) %>
        </div>

        <div class="text-end mt-4">
          <button class="add-address-btn" data-bs-toggle="modal" data-bs-target="#addAddressModal">
            <i class="fas fa-plus me-2"></i>Add New Address
          </button>
        </div>
      </div>
    </div>


  </div>
</div>
<!-- addmodal -->
