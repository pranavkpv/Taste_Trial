<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
   <title>Food Category Page</title>
   <style>
      body {
         font-family: Arial, sans-serif;
         margin: 0;
         padding: 0;
         box-sizing: border-box;
      }

      header {
         display: flex;
         justify-content: space-between;
         align-items: center;
         background-color: #f8f8f8;
         padding: 10px 20px;
         border-bottom: 1px solid #ddd;
      }

      .search-bar {
         display: flex;
         align-items: center;
         width: 40%;
      }

      .search-bar input {
         width: 100%;
         padding: 8px 12px;
         border: 1px solid #ddd;
         border-radius: 20px;
         outline: none;
      }

      .profile {
         display: flex;
         align-items: center;
      }

      .profile img {
         width: 40px;
         height: 40px;
         border-radius: 50%;
         margin-right: 10px;
      }

      .profile span {
         margin-right: 10px;
      }

      .logout {
         background-color: #f44336;
         color: white;
         padding: 8px 12px;
         border: none;
         border-radius: 5px;
         cursor: pointer;
      }

      main {
         padding: 20px;
      }

      .food-category {
         display: flex;
         flex-wrap: wrap;
         justify-content: center;
         gap: 20px;
      }

      .food-category .item {
         text-align: center;
         width: 120px;
      }

      .food-category img {
         width: 100px;
         height: 100px;
         border-radius: 50%;
         object-fit: cover;
      }
      .food-category {
         display: flex;
         flex-wrap: wrap;
         justify-content: center;
         gap: 20px;
         margin-top: 20px;
      }

      .food-category .item {
         text-align: center;
         width: 150px;
      }

      .food-category img {
         width: 120px;
         height: 120px;
         border-radius: 50%;
         object-fit: cover;
         box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      footer {
         background-color: #333;
         color: white;
         padding: 20px;
         display: flex;
         justify-content: space-between;
         flex-wrap: wrap;
      }

      footer div {
         flex: 1;
         padding: 10px;
         text-align: center;
      }

      footer a {
         color: white;
         text-decoration: none;
         display: block;
         margin: 5px 0;
      }

      footer input {
         padding: 8px;
         border: none;
         border-radius: 5px;
         margin-right: 10px;
      }

      footer button {
         padding: 8px 12px;
         border: none;
         background-color: #f44336;
         color: white;
         border-radius: 5px;
         cursor: pointer;
      }
   </style>
</head>

<body>
      <header>
         <div class="search-bar" id="searchCategory">
            <input type="text" placeholder="Search for food Category" oninput="searchCategories()">
         </div>
         <div class="profile" style="width: 550px;justify-content: end;">
            <a href=""><img src="https://via.placeholder.com/40" alt="User Profile"></a>
            <a href="" style="text-decoration: none;color:black"><span><%= users.firstname %> <%= users.lastname %></span></a>
         </div>
         <button class="logout">Logout</button>
      </header>
      <main>
         <h2>Collection of Food Categories</h2>
         <div class="food-category" id="foodCategories">
            <% categories.forEach(element => { %>
            <div class="item">
               <img src="<%= element.image %>" alt="<%= element.categoryname %>">
               <p><%= element.categoryname %></p>
            </div>
            <% }) %>
         </div>
      </main>
      <footer>
         <div>
            <h4>Contact</h4>
            <a href="#">Contact Us</a>
         </div>
         <div>
            <h4>Customer Service</h4>
            <a href="#">FAQ</a>
            <a href="#">Shipping and Returns</a>
         </div>
         <div>
            <h4>About us</h4>
            <a href="#">Privacy Policy</a>
            <a href="#">Payment Methods</a>
         </div>
         <div>
            <h4>Newsletter</h4>
            <input type="email" placeholder="example@gmail.com">
            <button>Subscribe</button>
         </div>
      </footer>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script>
   function searchCategories() {
      const input = document.querySelector("#searchCategory input").value.toLowerCase(); // Get search input
      const items = document.querySelectorAll(".food-category .item"); // Select all food category items

      items.forEach(item => {
         const category = item.querySelector("p").textContent.toLowerCase(); // Get category name
         if (category.includes(input)) {
            item.style.display = "block"; // Show if match
         } else {
            item.style.display = "none"; // Hide if no match
         }
      });
   }
</script>

</html>
