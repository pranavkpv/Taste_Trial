<script>
  document.getElementById('updateAccount').addEventListener('click', async function (e) {
    e.preventDefault()
    const firstName = document.getElementById('firstName').value
    const lastName = document.getElementById('lastName').value
    const phoneNumber = document.getElementById('phoneNumber').value
    const email = document.getElementById('email').value
    const response = await fetch('/user/updateAction', {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ firstName, lastName, phoneNumber, email })
    })

    const data = await response.json()
    if (data.nofirstName) {
      document.getElementById('hiddenFirstname').innerText = data.nofirstName
    } else {
      document.getElementById('hiddenFirstname').innerText = ""
    }
    if (data.nolastName) {
      document.getElementById('hiddenSecondname').innerText = data.nolastName
    } else {
      document.getElementById('hiddenSecondname').innerText = ""
    }
    if (data.noPhone) {
      document.getElementById('hiddenPhone').innerText = data.noPhone
    } else {
      document.getElementById('hiddenPhone').innerText = ""
    }
    if (data.noEmail) {
      document.getElementById('hiddenEmail').innerText = data.noEmail
    } else {
      document.getElementById('hiddenEmail').innerText = ""
    }

    if (data.existUser) {
      Swal.fire({
        title: "Exist",
        text:data.existUser,
        icon: "warning",
        draggable: true
      });
    }

    if(data.success){
      Swal.fire({
        title: "success",
        text:data.success,
        icon: "success",
        draggable: true
      });
      e.target.submit()
    }

  })

</script>