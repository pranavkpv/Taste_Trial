<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>TasteTrail - Food Categories</title>
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
   <style>
      body {
         font-family: Arial, sans-serif;
         margin: 0;
         padding: 0;
         box-sizing: border-box;
      }

      header {
         color: white;
         padding: 20px;
         display: flex;
         flex-direction: column;
         align-items: center;
      }

      header h1 {
         font-size: 3rem;
         margin: 10px 0;
      }

      .top-bar {
         width: 100%;
         display: flex;
         justify-content: space-between;
         padding: 10px 20px;
         align-items: center;
      }

      .top-bar a {
         color: white;
         text-decoration: none;
         margin: 0 10px;
      }

      .search-bar {
         display: flex;
         align-items: center;
         background-color: white;
         padding: 10px;
         border-radius: 20px;
         width: 60%;
         margin-top: 10px;
      }

      .search-bar select,
      .search-bar input {
         border: none;
         outline: none;
         margin: 0 10px;
      }

      .search-bar input {
         width: 100%;
      }

      main {
         padding: 20px;
         text-align: center;
      }

      .food-category {
         display: flex;
         flex-wrap: wrap;
         justify-content: center;
         gap: 20px;
         margin-top: 20px;
      }

      .food-category .item {
         text-align: center;
         width: 150px;
      }

      .food-category img {
         width: 120px;
         height: 120px;
         border-radius: 50%;
         object-fit: cover;
         box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      footer {
         background-color: #333;
         color: white;
         padding: 20px;
         display: flex;
         justify-content: space-between;
         flex-wrap: wrap;
      }

      footer div {
         flex: 1;
         padding: 10px;
         text-align: center;
      }

      footer a {
         color: white;
         text-decoration: none;
         display: block;
         margin: 5px 0;
      }

      footer input {
         padding: 8px;
         border: none;
         border-radius: 5px;
         margin-right: 10px;
      }

      footer button {
         padding: 8px 12px;
         border: none;
         background-color: #f44336;
         color: white;
         border-radius: 5px;
         cursor: pointer;
      }
   </style>
</head>

<body>
   <header>
      <div id="carouselExample" class="carousel slide" style="width:100%">
         <div class="carousel-inner">
           <div class="carousel-item active">
               <img src="/uploads/1735388306992-Screenshot 2024-12-13 195810.png" class="d-block w-100" alt="..."style="height:200px">
           </div>
           <% banners.forEach(element => { %>
            <div class="carousel-item ">
                  <div class="image">
                     <img src="<%= element.image %>" class="d-block w-100" alt="..."style="height:200px">
                     <h1 style="    position: absolute; top: 55px;color: black; left: 44%;"><%= element.title %></h1>
                  </div>
                  
             </div>
           <% }) %>
         </div>
         <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
           <span class="carousel-control-prev-icon" aria-hidden="true"></span>
           <span class="visually-hidden">Previous</span>
         </button>
         <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
           <span class="carousel-control-next-icon" aria-hidden="true"></span>
           <span class="visually-hidden">Next</span>
         </button>
       </div>
   </header>

   <main>
      <h2>Collection of Food Categories</h2>
      <div class="food-category" id="foodCategories">
         <% categories.forEach(element => { %>
         <div class="item">
            <img src="<%= element.image %>" alt="Biriyani">
            <p><%= element.categoryname %></p>
         </div>
         <% }) %>
      </div>
   </main>
   <footer>
      <div>
         <h4>Contact</h4>
         <a href="#">Contact Us</a>
      </div>
      <div>
         <h4>Customer Service</h4>
         <a href="#">FAQ</a>
         <a href="#">Shipping and Returns</a>
      </div>
      <div>
         <h4>About us</h4>
         <a href="#">Privacy Policy</a>
         <a href="#">Payment Methods</a>
      </div>
      <div>
         <h4>Newsletter</h4>
         <input type="email" placeholder="example@gmail.com">
         <button>Subscribe</button>
      </div>
   </footer>
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
   <script>
      function searchCategories() {
         const input = document.querySelector(".search-bar input").value.toLowerCase();
         const items = document.querySelectorAll(".food-category .item");

         items.forEach(item => {
            const category = item.querySelector("p").textContent.toLowerCase();
            if (category.includes(input)) {
               item.style.display = "block";
            } else {
               item.style.display = "none";
            }
         });
      }
   </script>

