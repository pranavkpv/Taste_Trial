<body>
   <section class="ftco-section">
      <div class="container">
         <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
               <div class="login-wrap p-4 p-md-5" style="height: 500px;">
                  <div class="icon d-flex align-items-center justify-content-center">
                     <span class="fa fa-user-o"></span>
                  </div>
                  <form action="/user/category" class="login-form" method="post">

                     <div class="form-group">
                        <input type="text" class="form-control rounded-left" placeholder="User Email" name="email"
                           required>
                     </div>
                     <div class="form-group d-flex">
                        <input type="password" class="form-control rounded-left" placeholder="Password" name="password"
                           required>
                     </div>
                     <div class="form-group d-md-flex">
                        <div class="w-50">
                           <a href="">forgot password</a>
                        </div>
                     </div>
                     <div class="form-group">
                        <button type="submit" class="btn btn-primary rounded submit p-3 px-5">Login</button>
                     </div>
                     <div class="form-group" style="margin-top: -10px;">
                        <p>Don't have an account <a href="">Signup</a></p>
                     </div>
                  </form>
               </div>
            </div>
         </div>
      </div>
   </section>

   <script src="js/jquery.min.js"></script>
   <script src="js/popper.js"></script>
   <script src="js/bootstrap.min.js"></script>
   <script src="js/main.js"></script>

</body>