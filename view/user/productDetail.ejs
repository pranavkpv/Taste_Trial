<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Inter', sans-serif;
  }

  body {
    background: #f8fafc;
  }

  .top {
    margin-top: 50px;
    max-width: 1400px;
    padding: 32px;
  }

  .product-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 48px;
    margin-bottom: 48px;
  }

  .gallery-container {
    position: sticky;
    top: 32px;
  }

  .main-image {
    position: relative;
    border-radius: 24px;
    overflow: hidden;
    aspect-ratio: 1;
    background: white;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .main-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .main-image:hover img {
    transform: scale(1.03);
  }

  .thumbnail-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 12px;
    margin-top: 16px;
  }

  .thumbnail {
    aspect-ratio: 1;
    border-radius: 12px;
    overflow: hidden;
    cursor: pointer;
    position: relative;
  }

  .thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.3s ease;
  }

  .thumbnail::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.03);
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .thumbnail:hover::after {
    opacity: 0;
  }

  .thumbnail.active {
    box-shadow: 0 0 0 3px #3b82f6;
  }

  .product-info {
    padding: 32px;
    background: white;
    border-radius: 24px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .product-header {
    margin-bottom: 24px;
  }

  .category-badge {
    display: inline-block;
    padding: 6px 12px;
    background: #eff6ff;
    color: #3b82f6;
    border-radius: 20px;
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 12px;
  }

  .title {
    font-size: 32px;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 8px;
  }

  .subtitle {
    color: #6b7280;
    font-size: 16px;
  }

  .price-container {
    display: flex;
    align-items: center;
    gap: 16px;
    margin: 24px 0;
  }

  .current-price {
    font-size: 36px;
    font-weight: 700;
    color: #1f2937;
  }

  .original-price {
    font-size: 20px;
    color: #9ca3af;
    text-decoration: line-through;
  }

  .discount-badge {
    padding: 6px 12px;
    background: #dcfce7;
    color: #059669;
    border-radius: 20px;
    font-size: 14px;
    font-weight: 500;
  }

  .stock-container {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 32px;
  }

  .stock-badge {
    padding: 6px 12px;
    background: #fee2e2;
    color: #dc2626;
    border-radius: 20px;
    font-size: 14px;
    font-weight: 500;
  }

  .quantity-input {
    width: 120px;
    padding: 12px;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    font-size: 16px;
    transition: all 0.3s ease;
  }

  .quantity-input:focus {
    outline: none;
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .action-buttons {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 16px;
    margin-bottom: 32px;
  }

  .btn {
    padding: 16px 32px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 16px;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
  }

  .btn-primary {
    background: linear-gradient(to right, #3b82f6, #2563eb);
    color: white;
    grid-column: span 2;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px -4px rgba(59, 130, 246, 0.2);
  }

  .btn-secondary {
    background: white;
    border: 2px solid currentColor;
  }

  .btn-wishlist {
    color: #dc2626;
  }

  .btn-wishlist:hover {
    background: #fee2e2;
  }

  .btn-order {
    color: #059669;
  }

  .btn-order:hover {
    background: #dcfce7;
  }

  .reviews-section {
    background: white;
    border-radius: 24px;
    padding: 32px;
    margin-top: 48px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .reviews-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
  }

  .rating-summary {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .average-rating {
    font-size: 48px;
    font-weight: 700;
    color: #1f2937;
  }

  .rating-stars {
    color: #fbbf24;
    font-size: 24px;
  }

  .review-card {
    padding: 24px;
    border-radius: 16px;
    background: #f8fafc;
    margin-bottom: 16px;
  }

  .review-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 12px;
  }

  .reviewer-name {
    font-weight: 600;
    color: #1f2937;
  }

  .review-date {
    color: #6b7280;
    font-size: 14px;
  }

  .review-stars {
    color: #fbbf24;
    margin-bottom: 8px;
  }

  .review-text {
    color: #4b5563;
    line-height: 1.6;
  }

  @media (max-width: 1024px) {
    .product-grid {
      grid-template-columns: 1fr;
    }

    .gallery-container {
      position: static;
    }
  }

  @media (max-width: 640px) {
    .container {
      padding: 16px;
    }

    .action-buttons {
      grid-template-columns: 1fr;
    }

    .btn-primary {
      grid-column: span 1;
    }
  }
</style>

