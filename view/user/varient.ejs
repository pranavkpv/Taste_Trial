<style>
    .card-container {
      margin-top: 20px;
    }

    /* Food Card Styling */
    .food-card {
      background: white;
      border: none;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      text-align: left;
      cursor: pointer;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .food-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
    }

    /* Image Styling */
    .food-img-container {
      position: relative;
      overflow: hidden;
    }

    .food-img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      transition: scale 0.3s ease;
    }

    .food-card:hover .food-img {
      scale: 1.1;
    }

    .offer-badge {
      position: absolute;
      top: 10px;
      left: 10px;
      background: #ff6b6b;
      color: white;
      padding: 5px 10px;
      font-size: 14px;
      border-radius: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    }

    /* Details Section */
    .food-details {
      padding: 15px;
    }

    .food-title {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 5px;
      color: #333;
    }

    .food-hotel {
      font-size: 14px;
      color: #888;
      margin-bottom: 10px;
    }

    .food-info {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .veg-badge,
    .rating-badge {
      font-size: 12px;
      padding: 5px 10px;
    }
</style>

<%- include('partials/userheader') %>
<h1 class="m-5">Available Varients</h1>
<div class="row m-5">
   <% varients.forEach(element=> { %>
      <div class="col-3">
         <div class="container mt-5">
            <form action="/user/productDetail" method="get" class="card-container"
              style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 20px;">
          
              <!-- Hidden Inputs -->
              <input type="hidden" name="rateid" value="<%= element._id  %>">
              <input type="hidden" name="hotelid" value="<%= hotels._id %>">
              <input type="hidden" name="foodid" value="<%= foods._id %>">
              <input type="hidden" name="varientid" value="<%= element.varientDetails[0]._id %>">
          
              <!-- Food Card -->
              <button type="submit" class="food-card">
                <!-- Food Image -->
                <div class="food-img-container">
                  <img src="<%= element.images[0] %>" alt="Food Image" class="food-img" style="width:100%;height:300px">
                </div>
          
                <!-- Food Details -->
                <div class="d-flex justify-content-between">
                  <div class="food-details">
                    <h1 class="food-title"><%= foods.foodname %></h1>
                    <h1 class="food-title">(<%= element.varientDetails[0].varientname %>)</h1>
                  </div>
                  <div class="rate">
                    <h3>â‚¹<%= element.rate %></h3>
                    <h6><%= element.delivery_time %>min</h6>
                  </div>
                </div>
              </button>
            </form>
          </div>
      </div>
      
      <% }) %>
</div>

<%- include('partials/userfooter') %>

<script>
  let debounceTimer;

function searchItem(value) {
  clearTimeout(debounceTimer);
  debounceTimer = setTimeout(() => {
    const currentPage = 1; // Reset to the first page for a new search
    window.location.href = `/user/varient?varient=${encodeURIComponent(value)}&hotelId=${encodeURIComponent('<%= hotels?._id || "" %>')}&foodId=${encodeURIComponent('<%= foods?._id || "" %>')}`;
  }, 700);
}


</script>