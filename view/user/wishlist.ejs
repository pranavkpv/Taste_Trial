<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
  /* Consolidated and corrected styles */
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f5f6fa;
  }

  /* Update profile header to match theme */
  .profile-header {
    background-color: #343a40;
    /* Changed from red to match menu */
    color: white;
    padding: 20px;
    text-align: center;
    position: relative;
  }

  /* Rest of the styles remain the same but organized better */
  .content-header {
    background-color: #ffffff;
    padding: 20px;
    border-bottom: 2px solid #dee2e6;
  }

  .wishlist-title {
    font-size: 2.5rem;
    font-weight: bold;
    color: #333;
  }

  .wishlist-card {
    border: none;
    border-radius: 10px;
    overflow: hidden;
    transition: transform 0.3s ease-in-out;
  }

  .hover-lift {
    transition: transform 0.2s ease;
  }

  .hover-lift:hover {
    transform: translateY(-5px);
  }

  .card-title {
    font-size: 1.2rem;
    font-weight: 600;
  }

  .price {
    color: #28a745;
    font-weight: bold;
  }

  .remove-btn {
    font-size: 0.8rem;
  }

  .empty-state {
    padding: 3rem;
    background: #f8f9fa;
    border-radius: 1rem;
  }

  .object-fit-cover {
    object-fit: cover;
  }

  .nav-links a.wishlist {
    background: #34495e;
    border-left: 3px solid #3498db;
  }
</style>

<%- include('partials/userheader') %>
<div class="row">
  <div class="col-md-2 menu">
    <%- include('partials/profileside') %>
  </div>

  <div class="col-md-10">
    <div class="bg-white shadow-sm rounded-3" style="margin-top: 72px;">
      <!-- Professional Header Section -->
      <div class="border-bottom p-4">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h2 class="mb-1">My Wishlist</h2>
            <p class="text-muted mb-0">Manage your favorite items</p>
          </div>
          <span class="badge bg-primary rounded-pill px-3 py-2">
            <%= wishlistCount %> Items
          </span>
        </div>
      </div>

      <!-- Content Section -->
      <div class="p-4">
        <% if (!wishlistData || wishlistData.length === 0) { %>
          <!-- Elegant Empty State -->
          <div class="text-center py-5">
            <div class="empty-state-container">
              <div class="mb-4">
                <div class="empty-state-icon bg-light rounded-circle p-4 d-inline-block mb-3">
                  <i class="bi bi-heart text-primary" style="font-size: 3rem;"></i>
                </div>
                <h4 class="mb-3">Your Wishlist is Empty</h4>
                <p class="text-muted mb-4 max-w-md mx-auto">Explore our menu and save your favorite dishes. Your culinary journey starts here!</p>
                <a href="/menu" class="btn btn-primary px-4 py-2">
                  <i class="bi bi-grid me-2"></i>Browse Menu
                </a>
              </div>
            </div>
          </div>
        <% } else { %>
          <!-- Grid Layout for Items -->
          <div class="row g-4">
            <% wishlistData.forEach(items => { %>
              <div class="col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm hover-lift transition-all">
                  <!-- Image Section -->
                  <div class="position-relative">
                    <img src="<%= items.rateDetails[0].images[0] %>" 
                         class="card-img-top object-fit-cover" 
                         alt="<%= items.foodDetails[0].foodname %>" 
                         style="height: 220px;">
                    <div class="position-absolute top-0 start-0 w-100 p-3">
                      <span class="badge bg-primary">
                        <%= items.categoryDetails[0].categoryname %>
                      </span>
                    </div>
                  </div>

                  <!-- Content Section -->
                  <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                      <h5 class="card-title mb-0 fw-bold text-dark">
                        <%= items.foodDetails[0].foodname %>
                      </h5>
                      <span class="badge bg-light text-primary px-3 py-2 rounded-pill fw-bold">
                        $<%= items.rateDetails[0].rate.toFixed(2) %>
                      </span>
                    </div>

                    <div class="mb-4">
                      <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-shop me-2 text-muted"></i>
                        <span class="text-muted"><%= items.hotelDetails[0].hotelname %></span>
                      </div>
                      <div class="d-flex align-items-center">
                        <i class="bi bi-tag me-2 text-muted"></i>
                        <span class="text-muted"><%= items.varientDetails[0].varientname %></span>
                      </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-2">
                      <% const isInCart = carts.some(element => 
                        element.rate_id.toString() === items.rateDetails[0]._id.toString()
                      ); %>
                      
                      <button class="btn <%= isInCart ? 'btn-success' : 'btn-primary' %> flex-grow-1" 
                              onclick="addToCart('<%= items.rateDetails[0]._id %>')"
                              <%= isInCart ? 'disabled' : '' %>>
                        <i class="bi <%= isInCart ? 'bi-cart-check' : 'bi-cart-plus' %> me-2"></i>
                        <%= isInCart ? "Added to Cart" : "Add to Cart" %>
                      </button>

                      <button class="btn btn-outline-danger" 
                              data-bs-toggle="modal" 
                              data-bs-target="#removewishlist"
                              onclick="removefun('<%= items._id %>')">
                        <i class="bi bi-trash"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>

          <!-- Professional Pagination -->
          <% if (page > 1) { %>
            <div class="d-flex justify-content-center mt-5">
              <nav aria-label="Page navigation">
                <ul class="pagination">
                  <% for(let i = 1; i <= page; i++) { %>
                     
                      <button class="page-link <% if (i==selectedPage) { %>
                       bg-primary text-white
                      <% } %>" onclick="pagination('<%= i %>')"><%= i %></button>
             
                 
                  <% } %>
                </ul>
              </nav>
            </div>
          <% } %>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Enhanced Remove Modal -->
<% if (wishlistData && wishlistData.length > 0) { %>
<div class="modal fade" id="removewishlist" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0">
      <form action="/user/removeWishlist" method="post">
        <input type="hidden" id="removeid" name="removeid">
        <input type="hidden" id="rateId" value="<%= wishlistData[0].rateDetails[0]._id %>">
        <div class="modal-body text-center p-5">
          <div class="mb-4">
            <i class="bi bi-exclamation-circle text-warning" style="font-size: 3rem;"></i>
          </div>
          <h4 class="mb-3">Remove from Wishlist?</h4>
          <p class="text-muted mb-4">This item will be removed from your wishlist. You can add it back anytime.</p>
          <div class="d-flex gap-2 justify-content-center">
            <button type="button" class="btn btn-light px-4" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger px-4">Remove</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<% } %>



<%- include('partials/userfooter') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<script>
  function removefun(id) {
    document.getElementById('removeid').value = id
  }

  function pagination(selectedpage) {
    window.location.href = `/user/wishlist?page=${ selectedpage }`
  }

  async function addToCart(id) {
    const response = await fetch('/user/AddToCart', {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ rateId: id })
    })
    const data = await response.json()
    if (data.exist) {
      Swal.fire({
        title: data.exist,
        icon: "info",
        draggable: true
      });
    }
    if (data.nostock) {
      Swal.fire({
        title: data.nostock,
        icon: "info",
        draggable: true
      });
    }
    if (data.success) {
      Swal.fire({
        title: data.success,
        icon: "success",
        draggable: true
      }).then(()=>{
        window.location.reload()
      })
    }
  }
</script>

<% if (successmessage && successmessage.length>0) { %>
<script>
  Swal.fire({
    text: "<%= successmessage %>",
    icon: "success"
  });
</script>
<% } %>